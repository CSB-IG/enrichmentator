#!/usr/bin/awk -f
BEGIN {
	FS = "\t"
	subtipo = 1
	componente = 2
	comunidad = 3
	kegg = 4
	gobp = 5
	gocc = 6
	gomf = 7
	nrow = 1 # contador de fila
	ncol = 1 # contador de columna
	OFS = "\t"
	ORS = "\n"
	colnames[1] = "SUBTYPE"
}
NR > 1 {
	# Generar los índices para mostrar la info

	# seleccionar la columna de interés
	#search = kegg
	split($search, array, ";")

	rownames[nrow] = $subtipo "_" $componente "_" $comunidad

	for (i = 1; i <= length(array); i++) {
		id = array[i]

		# descartar elemento vacío
		if (id == "X" || id == "") { continue }

		# limpiar id para evitar repetidos
		gsub(/^[ \t]+|[ \t]+$/, "", id)

		if (!(columns[id])) {
			columns[id] = ncol
			colnames[ncol] = id
			ncol += 1
		}
		rows[nrow][columns[id]] = 1
	}

	nrow += 1
}
END {
	# HEADER
	# print colnames
	for (col = 1; col < ncol; col++) {
		printf(OFS colnames[col])
	}
	printf(ORS)

	# matrix
	for (row = 1; row < nrow; row++) {
		printf(rownames[row]) #name
		for (col = 1; col < ncol; col++) {
			printf(OFS (rows[row][col] == 1 ? 1 : 0))
		}
		printf(ORS)
	}

}
